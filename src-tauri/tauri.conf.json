{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ton",
  "version": "0.1.0",
  "identifier": "com.ton.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Ton",
        "width": 576,
        "height": 756,
        "minWidth": 600,
        "minHeight": 400,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "alwaysOnTop": false,
        "focus": false,
        "skipTaskbar": true,
        "resizable": true,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/tray.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": false
    }
  }
}
